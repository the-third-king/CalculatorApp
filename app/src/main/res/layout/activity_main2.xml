<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGrey"
    tools:context="com.example.calculatorapp.MainActivity"
    tools:ignore="HardCodedText">

    <TextView
        android:id="@+id/txtGameNameHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YuGiOh Health Calculator"
        android:textSize="20sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/txtPlayerTurnHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 1 Turn"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/purple_500"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/etPlayer1Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/grey"
        android:text="Player 1"/>

    <TextView
        android:id="@+id/txtPlayer1HealthHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="8000 HP"
        android:gravity="center"/>

    <TextView
        android:id="@+id/etPlayer2Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:textSize = "30sp"
        android:gravity="center"
        android:text="Player 2" />

    <TextView
        android:id="@+id/txtPlayer2HealthHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:text="8000 HP"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/btnAttackHorizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:text="Attack"
                android:onClick="attackScreen"/>

            <Button
                android:id="@+id/btnNextTurnHorizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:text="Next Turn"
                android:onClick="nextTurn"/>

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/btnNewGameHorizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:text="New Game"
                android:onClick="newGame"/>
        </TableRow>

    </TableLayout>

</LinearLayout>